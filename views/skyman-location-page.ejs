<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>Skyman Location Capture</title>
  <meta name="viewport" content="width=device-width, initial-scale=1" />

  <style>
    body {
      font-family: Arial, sans-serif;
      padding: 20px;
      background: #f6f6f6;
    }
    .card {
      background: white;
      padding: 20px;
      border-radius: 12px;
      box-shadow: 0 2px 8px rgba(0,0,0,0.15);
      margin-bottom: 15px;
    }
    button {
      padding: 12px 16px;
      width: 100%;
      margin-top: 10px;
      border: none;
      border-radius: 8px;
      font-size: 16px;
      background: #007bff;
      color: white;
    }
    button:active {
      opacity: 0.8;
    }
    .smallBtn {
      background: #333;
      margin-top: 8px;
    }
    .info {
      font-size: 16px;
      margin-top: 10px;
      background: #e8f0fe;
      padding: 10px;
      border-radius: 6px;
      word-break: break-all;
    }
    #loader {
      display: none;
      text-align: center;
      font-weight: bold;
      margin-top: 10px;
    }
  </style>
</head>

<body>

  <h2>üìç Skyman Exact Location</h2>

  <div class="card">
    <button onclick="getLocation()">Get Exact Coordinates</button>

    <div id="loader">Getting location...</div>

    <div id="output" class="info" style="display:none;"></div>

    <button class="smallBtn" onclick="copyLat()">Copy Latitude</button>
    <button class="smallBtn" onclick="copyLng()">Copy Longitude</button>
    <button class="smallBtn" onclick="copyBoth()">Copy Both</button>

    <button class="smallBtn" id="openMapBtn" style="display:none;" onclick="openInMaps()">Open in Google Maps</button>
  </div>

  <script>
    let currentLat = "";
    let currentLng = "";

    function getLocation() {
      document.getElementById("loader").style.display = "block";

      if (!navigator.geolocation) {
        alert("Your device does not support location.");
        return;
      }

      navigator.geolocation.getCurrentPosition(
        (pos) => {
          document.getElementById("loader").style.display = "none";

          currentLat = pos.coords.latitude;
          currentLng = pos.coords.longitude;

          document.getElementById("output").style.display = "block";
          document.getElementById("openMapBtn").style.display = "block";

          document.getElementById("output").innerHTML =
            "<b>Latitude:</b> " + currentLat + "<br>" +
            "<b>Longitude:</b> " + currentLng + "<br><br>" +
            "<b>Accuracy:</b> " + pos.coords.accuracy + " meters";
        },

        (err) => {
          document.getElementById("loader").style.display = "none";
          alert("Location denied or unavailable.");
        },

        {
          enableHighAccuracy: true,  // Most accurate GPS reading
          timeout: 15000,
          maximumAge: 0
        }
      );
    }

    function copyLat() {
      navigator.clipboard.writeText(currentLat);
      alert("Latitude copied!");
    }

    function copyLng() {
      navigator.clipboard.writeText(currentLng);
      alert("Longitude copied!");
    }

    function copyBoth() {
      navigator.clipboard.writeText(currentLat + ", " + currentLng);
      alert("Latitude + Longitude copied!");
    }

    function openInMaps() {
      if (!currentLat || !currentLng) return;
      const url = `https://www.google.com/maps?q=${currentLat},${currentLng}`;
      window.open(url, "_blank");
    }
  </script>

</body>
</html>