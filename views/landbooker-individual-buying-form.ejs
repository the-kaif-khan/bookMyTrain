<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>individual-product-page-when-click-page</title>

  <link rel="stylesheet" href="/stylesheets/buyingPagesCSS/individual-page-body.css">
  <link rel="stylesheet" href="/stylesheets/buyingPagesCSS/individual-page-footer.css">
  <link rel="stylesheet" href="/stylesheets/buyingPagesCSS/individual-page-header.css">
  <link rel="stylesheet" href="/stylesheets/buyingPagesCSS/individual-page-mediaQuery.css">
  <link rel="stylesheet" href="/stylesheets/buyingPagesCSS/individual-page-sidebar.css">

  <link rel="stylesheet" href="/stylesheets/buyingPagesCSS/individual-page-recommended-products.css">

</head>
<body>
  
    <!-- header container -->
    <div class="header">
      <div class="leftHeader">
        <a href="/home/basti"><img src="/imagesAndVideos/Logos/LOGO/Wow3.png" alt=""></a>
      </div>
      <div class="middleHeader">
        <input type="text" placeholder="Search Landbook" class="searchBar">
        <button class="searchButton">
          <img src="/imagesAndVideos/Logos/Search Icon.svg" alt="">
          <div class="tooltip">
            Search
          </div>
        </button>
        <button class="voiceButton">
          Voice
          <div class="tooltip">
            Search with your voice
          </div>
        </button>
      </div>
      <div class="rightHeader">
        <div class="locationIcon">
          <button class="locationButton">
            <img src="/imagesAndVideos/Logos/Marker icon.svg" alt="">
          </button>
          <div class="tooltip">
            Your Location
          </div>
        </div>
        <a href="/buy/basti/claimcart">
          <div class="cartIcon">
            <button class="cartButton"> 
              <img src="/imagesAndVideos/Logos/Cart Icon.svg" alt="">
              <div class="tooltip">
                Lands in Cart
              </div>
              <div class="cart-quantity js-cart-quantity">
                0
              </div>
            </button>   
          </div>
        </a>
        <div class="profileIcon">
          <button class="profileButton">
            <img src="/imagesAndVideos/Logos/User profile icon.svg" alt="">
            <div class="tooltip">
              Your Profile
            </div>
          </button> 
        </div>
      </div>
    </div>
  
  <!-- sidebar container -->
      <div class="sidebarContainer">
        <div class="advertisingSidebar sidebarContents">
          <img src="/imagesAndVideos/Logos/LOGO/Wow4.webp" alt="">
          Landbook
        </div>
        <div class="cartIconSidebar sidebarContents">
          <img src="/imagesAndVideos/Logos/Cart Icon.svg" alt="">
          Buying Cart
        </div>
        <div class="helpIcon sidebarContents">
          <img src="/imagesAndVideos/Logos/Help icon.svg" alt="">
          Need Help
        </div>
        <div class="supportUsIcon sidebarContents">
          <img src="/imagesAndVideos/Logos/User feedback icon.svg" alt="">
          Support Us
        </div>
        <div class="aboutUsIcon sidebarContents">
          <img src="/imagesAndVideos/Logos/About us icon.svg" alt="">
          About Us
        </div>
      </div>


      <!-- main body of individual product -->
      <div class="mainBodyContainer">
        <% if(theProduct) { %>
          <div class="product">
            <!-- side images container of individual product -->
            <div class="sideImagesOfProduct">
              <% theProduct.productImages.forEach((img, index) => { %>
                <div class="firstImage images">
                  <img src="/home/product/image/<%= theProduct._id %>/<%= index %>" onclick="swapImage(this)" alt=""/>
                </div>
              <% }) %>
            </div>
  
            <!-- main image container of individual product -->
            <div class="mainImageOfProduct">
              <img src="/home/product/image/<%= theProduct._id %>/0" alt="" id="mainImage"/>

              <!-- individual product details container -->
              <div class="individualProductDetails">
                <div class="mainHeading">
                  <%= theProduct.title %>
                </div> 
                <div class="productStats">
                  <div class="productStarCount">
                    3.5
                  </div>
                  <div class="productStars">
                    <img src="/imagesAndVideos/Logos/ratings/rating-45.png" alt="">
                  </div>
                </div> 
                <div class="claimedAndVisits">
                  <div class="productClaims">
                    Claimed: <%= theProduct.claimedPeople.length %>
                  </div>
                  <div class="productVisits">
                    Visits: <%= theProduct.visits.length %>
                  </div>
                </div>
                <div class="mainPrice">
                  Price: <span><%= theProduct.price %> Lakhs</span>
                </div>
                <div class="mainLengthAndBreadth">
                  <div class="productLengthAndBreadthText">
                    LB = <%= theProduct.LB %>
                  </div>
                  <div class="productLengthAndBreadthDabba">
                    L*B
                  </div>
                </div>
    
                <div class="whyDetails">
                  <div class="whyDetailsHead">
                    Why should you buy...
                  </div>
                  <ul>
                    <li>Just for an investment</li>
                    <li>To build a family Home</li>
                    <li>To start a small scale business</li>
                    <li>To give place for kiraya</li>
                    <li>For gift to anyone</li>
                  </ul>
                </div>
    
                <div class="mainSpec">
                  <div class="mainSpecHead">
                    Product Specification:
                  </div>
                  <div class="mainSpecRatingStars">
                    <img src="/imagesAndVideos/Logos/ratings/rating-45.png" alt="">
                  </div>
                  <ol type="a">
                    <li>Near St. Xaviers School</li>
                    <li>Near St. Xaviers School</li>
                    <li>Near St. Xaviers School</li>
                    <li>Near St. Xaviers School</li>
                    <li>Near St. Xaviers School</li>
                  </ol>
                </div>
                <div class="claimToCart">
                  <a href="/buy/addtoclaim/basti/<%= theProduct._id %>" class="claimToCartLink">
                    <button class="claimToCartButton js-claim-to-cart">
                      Claim To Land Cart
                    </button>
                  </a>
                </div>
                <div class="buyWithin48hours">
                  <a href="/buy/buyingform/basti/<%= theProduct._id %>" class="addToBuyingCartLink">
                    <button class="buyWithin48hoursButton">
                      Buy Within 48 Hours
                    </button>
                  </a>
                </div>
                <div class="advertisingDabba">
                  Advertising
                </div>
              </div>

            </div>
            <!-- main image container of individual product end -->
  

            <!-- individual claimedUser details container -->
            <div class="individualProductDetails">
              <div class="claimedPeopleHeading">
                Claimed people of this Zameen -
              </div>
              <a href="/us/viewClaimedPeople/<%= theProduct._id %>" class="link">Click to see all claimed people of this buying form</a>
              <% if(claimedPeoples.length > 0) { %>
                <% claimedPeoples.forEach((claimedPeople) => { %>
                  <div class="user">
                    <div class="nameOfUser">
                      Name: <%= claimedPeople.name %>
                    </div>
                    <div class="usernameOfUser">
                      Username: <%= claimedPeople.username %>
                    </div>
                    <div class="emailOfUser">
                      Email: <%= claimedPeople.email %>
                    </div>
                    <div class="contactNumberOfUser">
                      Contact number: <%= claimedPeople.contactNumber %>
                    </div>
                  </div>
                <% }) %>
              <% } else { %>
                <div class="noUsers">No claimed users</div>
              <% } %>

            </div>
  
            <!-- fourth advertising section in main body -->
            <div class="advertisingInMainBodyContainer">
              advertising
            </div>
          </div>

        <% } else { %>
          No product available.
        <% } %>

        <!-- main body container div -->
      </div>


      <!-- footer container -->
      <footer>

        <div class="aboutThisPage">
          <div class="aboutThisPageLanguage">
            <div class="languageImage">
              <img src="/imagesAndVideos/Logos/LOGO/Wow3.webp" alt="">
            </div>
            <div class="languageText">
              English
            </div>  
          </div>
    
          <div class="aboutCountry">
            <div class="aboutCountryImage">
              <img src="/imagesAndVideos/Logos/LOGO/Wow4.webp" alt="">
            </div>
            <div class="aboutCountryText">
              India
            </div>
          </div>
        </div>
    
        <div class="aboutCompany">
          <div class="companyConditions aboutCompanyTexts">
            Conditions of Use
          </div>
          <div class="companyPrivacyPolicy aboutCompanyTexts">
            Privacy Notice
          </div>
          <div class="aboutAdvertising aboutCompanyTexts">
            Interest-Based Ads
          </div>
        </div>
    
        <div class="companyCopywrite">
          .c. 1996-2024, Landbook.com, Inc. and its affiliates
        </div>
    
      </footer>

      <!-- product recommendations in the bottom of the page -->
      <!-- <script type="module" src="../../all-new-pages-js/individual-product-js/iPProducts.js"></script> -->

      <script>
        function swapImage(imgElement) {
          const mainImage = document.getElementById('mainImage');
          mainImage.classList.add('fade-out');
          setTimeout(() => {
            mainImage.src = imgElement.src;
            mainImage.classList.remove('fade-out');
          }, 150)
        }
      </script>

</body>
</html>