<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Find landbookers page</title>
  <link rel="stylesheet" href="/stylesheets/homePagesCSS/find-users-header.css">
</head>
<body>

  <div class="header">
    <div class="headerLogo">
      <a href="/landad/admin-panel"><img src="/imagesAndVideos/Logos/LOGO/Wow3.png" alt=""></a>
    </div>
    <div class="headerText">
      Admin find landbookers Page
    </div>
  </div>
  <!-- navlinks -->
  <div class="navigationsBox">
    <a href="/landad/find-users" class="links">
      <div class="navLinks">
        Users
      </div>       
    </a>

    <a href="/landad/admin-panel2" class="links">
      <div class="navLinks">
        Home
      </div>
    </a>
  </div>

  <% if(success.length > 0) { %>
    <div class="flash flash-success">
      <%= success %>
    </div>
  <% } %>
  <% if(error.length > 0) { %>
    <div class="flash flash-error">
      <%= error %>
    </div>
  <% } %>

  <div class="blogContents">
    <% if(landbookers.length > 0) { %>
      <% landbookers.reverse().forEach((landbooker) => { %>
        <div class="blogs">
          <div class="contentsAboutProfile">
            <div class="aboutProfileImage profileImage">
              <img src="" alt="">
            </div>
            <div class="aboutProfileUsername">
              <%= landbooker.username %>
            </div>
          </div>
          <div class="blog">
            Name: <%= landbooker.fullname %>
          </div>
          <div class="likeCount">
            Email: <%= landbooker.email %>
          </div>
          <div class="likeCount">
            Address: <%= landbooker.address %>
          </div>
          <div class="contactNumber">
            Contact number: <%= landbooker.contactNumber %>
          </div>
          <div class="contactNumber">
            Banned: <%= landbooker.banned %>
          </div>
          <div class="footersOfBlogs">
            <!-- <div class="likePost">
              <a href="" class="likePost">
                6
              </a>
            </div> -->
            <div class="editBlog" onclick="return confirmDelete();">
              <a href="/landad/admin/delete-landbooker/<%= landbooker._id %>" class="editBlog">Delete Landbooker</a>
            </div>
            <div class="ban">
              <a href="/landad/admin/ban-landbooker/<%= landbooker._id %>">
                <button class="deleteBlog">
                  <% if(landbooker.banned === true) { %>
                    Landbooker is banned
                  <% } else { %>
                    Ban landbooker
                  <% } %>
                </button>
              </a>
            </div>
            <div class="unban">
              <a href="/landad/admin/unban-landbooker/<%= landbooker._id %>">
                <button class="deleteBlog unban">
                  Unban landbooker
                </button>
              </a>
            </div>
          </div>
        </div>
      <% }) %>
    <% } else { %>
      <div class="noPosts">No landbookers yet.</div>
    <% } %>

  </div>


  <script>
  function confirmDelete() {
    return confirm('Are you sure you want to delete this landbooker? This action cannot be undone!')
  }
  // function confirmBan() {
  //     return confirm('Are you sure you want to ban this landbooker? He/she will not be able to log in...and this action cannot be undone!')
  //   }
  </script>



</body>
</html>