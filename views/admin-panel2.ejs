<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Admin second panel</title>

  <link rel="stylesheet" href="/stylesheets/homePagesCSS/adminNewPanel.css">

</head>
<body>

  <div class="header">
    <div class="title">
      Landbook
    </div>
    <div class="aboutPage">
      Admin panel
    </div>
  </div>

  <!-- navigations -->
  <nav class="main-navbar">
    <button class="hamburger" onclick="toggleSidebar()">
      &#9776
    </button>
    <div class="hamburgerNotification">
      <%= mapProductCreationLength + userBayanaForms.length + buyingCartTimers.length + landbookerMoneyProduct.length + queryhouseMoneyProduct.length + skymanProducts.length + userBayanaForms.length %>
    </div>
  </nav>

  <div id="sidebar" class="sidebar">
    <div class="sidebarTops">
      <button class="close-btn" onclick="toggleSidebar()">
        &times;
      </button>
    </div>
    <div class="navigationsBox">
      <a href="/landad/login" class="links">
        <div class="navLinks">
          Home
        </div>       
      </a>
      <a href="/us/admin-calculator" class="links">
        <div class="navLinks">
          Calculator
        </div>
      </a>
      <a href="/home/login" class="links">
        <div class="navLinks">
          Landbook home
        </div>
      </a>
    </div>
    <div class="navigationsBox2">
      <a href="/us/landbook" class="links">
        <div class="navLinks">
          Landbooker home
        </div>
      </a>
      <a href="/us/new-map" class="links ban-user">
        <div class="navLinks">
          New map
        </div>
      </a>
    </div>
    <div class="navigationsBox3">
      <a href="/us/adminProducts" class="links">
        <div class="navLinks">
          Create new map elements
        </div>
        <div class="createMapElementNotification">
          <%= mapProductCreationLength %>
        </div>
      </a>
      <a href="/landad/admin-panel" class="links">
        <div class="navLinks">
          Create products
        </div>
      </a>
    </div>
    <div class="navigationsBox4">
      <a href="/landbook-query-house/create" class="links">
        <div class="navLinks skyman">
          Create Landbook Query House
        </div>
      </a>
      <a href="/landbook-query-house/view-houses" class="links">
        <div class="navLinks">
          View Query Houses
        </div>
      </a>
    </div>
    <div class="navigationsBox5">
      <a href="/landad/dues" class="links">
        <div class="navLinks due">
          Money
        </div>
        <div class="dueNotification">
          <%= userBayanaForms.length %>
        </div>
      </a>
      <a href="/us/landbookers-buying-cart-timers" class="links">
        <div class="navLinks buyingCartTimer">
          Buying cart timers
        </div>
        <div class="buyingCartTimerNotification">
          <%= buyingCartTimers.length %>
        </div>
      </a>
    </div>
    <div class="navigationsBox6">
      <a href="/landad/landbooker-dues" class="links">
        <div class="navLinks staffMoney">
          Landbooker money
        </div>
        <div class="staffMoneyNotification">
          <%= landbookerMoneyProduct.length %>
        </div>
      </a>
      <a href="/landad/queryhouse-dues" class="links">
        <div class="navLinks queryhouseMoney">
          Query house money
        </div>
        <div class="queryhouseMoneyNotification">
          <%= queryhouseMoneyProduct.length %>
        </div>
      </a>
    </div>
    <div class="navigationsBox7">
      <a href="/us/skyman-products-page" class="links">
        <div class="navLinks skyman">
          Skyman products
        </div>
        <div class="skymanNotification">
          <%= skymanProducts.length %>
        </div>
      </a>
      <a href="/us/landbooker-user-bayana-forms" class="links">
        <div class="navLinks userBayanaForms">
          User bayana forms
        </div>
        <div class="userBayanaFormsNotification">
          <%= userBayanaForms.length %>
        </div>
      </a>
    </div>
    <div class="navigationsBox8">
      <a href="/landad/seed-city-tehsils" class="links">
        <div class="navLinks queryhouseMoney">
          Seed city tehsils
        </div>
      </a>
    </div>
  </div>

  <!-- sidebar container -->
  <div class="sidebarContainer">
    <a href="/us/buyingforms" class="sidebarLinks">
      <div class="buyingForms sidebarContents">
        <img src="/imagesAndVideos/Logos/LOGO/Wow4.webp" alt="">
        Buying forms
      </div>
      <div class="buyingFormsNotification">
        <%= buyingForms.length %>
      </div>
    </a>
    <a href="/us/Sellingforms" class="sidebarLinks">
      <div class="sellingForms sidebarContents">
        <img src="/imagesAndVideos/Logos/Cart Icon.svg" alt="">
        SellingForms
      </div>
      <div class="sellingFormsNotification">
        <%= sellingForms.length %>
      </div>
    </a>  
    <a href="/us/adminProducts" class="sidebarLinks">
      <div class="createMapElements sidebarContents">
        <img src="/imagesAndVideos/Logos/Help icon.svg" alt="">
        Create new map elements
      </div>
      <div class="createMapElementsNotification">
        <%= mapProductCreationLength %>
      </div>
    </a>

    <a href="/us/mapCoordinates" class="sidebarLinks">
      <div class="supportUsIcon sidebarContents">
        <img src="/imagesAndVideos/Logos/User feedback icon.svg" alt="">
        Get map coordinates
      </div>
    </a>

    <a href="/landad/find-users" class="sidebarLinks">
      <div class="aboutUsIcon sidebarContents">
        <img src="/imagesAndVideos/Logos/About us icon.svg" alt="">
        Users
      </div>
    </a>

  </div>

  <div class="container">
    <div class="pageTitle">
      Owner login
    </div>
    <% if(success.length > 0) { %>
      <div class="flash flash-success">
        <%= success %>
      </div>
    <% } %>
    <% if(error.length > 0) { %>
      <div class="flash flash-error">
        <%= error %>
      </div>
    <% } %>
    <div class="loginContainer">
      <div class="loginBox">
        <div class="loginTitle">
          Login now
        </div>
        <form action="/landad/login-owner" method="post">
          <input type="text" placeholder="Enter username" class="username" name="username" required>
          <input type="password" placeholder="Enter your password" class="password" name="password" required>
          <a href="/landad/forgotPass" class="forgotPass">
            forgot password?
          </a>
          <input type="submit" value="Login" class="login">
          <a href="/landad/logoutOwner" class="logoutLink">Logout</a>
        </form>
      </div>
    </div>

    <div class="">
      <a href="/us/adminProducts" class="readProducts">
        Read all products.
      </a>
      <a href="/landad/login" class="readProducts">
        Go to home
      </a>
    </div>

  </div>

  <script>
    function toggleSidebar() {
      document.getElementById('sidebar').classList.toggle('active');
    }
  </script>

</body>
</html>