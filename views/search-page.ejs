// voice search starts
(() => {
  const SpeechRecognition = window.SpeechRecognition || window.webkitSpeechRecognition;
  if (!SpeechRecognition) return;

  // üé§ Get both mic buttons and the search input
  const micBtnMain = document.getElementById('micBtnMain');
  const micBtnSide = document.getElementById('micBtnSide');
  const inputBox = document.querySelector('input[name="q"]');

  // Create recognition instance
  const recog = new SpeechRecognition();
  recog.interimResults = false;
  recog.maxAlternatives = 1;

  // üî§ Map languages for speech recognition
  const langMap = {
    en: 'en-US',
    hi: 'hi-IN',
    bn: 'bn-IN',
    ur: 'ur-PK',
    ta: 'ta-IN',
    te: 'te-IN',
    pa: 'pa-IN'
  };

  // Function to get the currently selected language
  function getCurrentLang() {
    const mainSel = document.getElementById('languageSelectMain');
    const sideSel = document.getElementById('languageSelectSidebar');
    const selected =
      (mainSel && mainSel.value) ||
      (sideSel && sideSel.value) ||
      'en'; // fallback
    return langMap[selected] || 'en-US';
  }

  // Function to start recognition
  function startRecognition(activeBtn) {
    recog.lang = getCurrentLang();
    const tooltip = activeBtn.querySelector('.tooltip');
    if (tooltip) tooltip.textContent = 'Listening...';
    recog.activeBtn = activeBtn;
    recog.start();
  }

  // üñ±Ô∏è Click listeners for both mic buttons
  if (micBtnMain) micBtnMain.addEventListener('click', () => startRecognition(micBtnMain));
  if (micBtnSide) micBtnSide.addEventListener('click', () => startRecognition(micBtnSide));

  // üéß When recognition gives a result
  recog.addEventListener('result', e => {
    const transcript = e.results[0][0].transcript.trim();
    inputBox.value = transcript;
    inputBox.form?.requestSubmit(); // submit the search form automatically
  });

  // üé§ Reset tooltip after recognition ends
  recog.addEventListener('end', () => {
    [micBtnMain, micBtnSide].forEach(btn => {
      if (!btn) return;
      const tooltip = btn.querySelector('.tooltip');
      if (tooltip) tooltip.textContent = 'Search with your voice';
    });
  });
})();
// voice search ends

